<main>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">E-Store</a>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0 profile-menu">
          <li class="nav-item dropdown">
            <a
              class="nav-link dropdown-toggle"
              href="#"
              id="navbarDropdown"
              role="button"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              <span class="text-light me-3" id="'user-name"> </span>
              <i class="fas fa-user"></i>
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
              <li><a class="dropdown-item" href="#"><i
                    class="fas fa-sliders-h fa-fw"
                  ></i>
                  Cuenta</a></li>
              <li><a class="dropdown-item" href="#"><i
                    class="fas fa-cog fa-fw"
                  ></i>
                  Configuración</a></li>
              <li><hr class="dropdown-divider" /></li>
              <li><button class="btn dropdown-item" onclick="logout()"><i
                    class="fas fa-sign-out-alt fa-fw"
                  ></i>
                  Cerrar sesión</button></li>
            </ul>
          </li>
          <button class="btn" onclick="setCartRoute()">
            <a href="" id="cart-route">
              <i class="fa-solid fa-cart-shopping"></i>
            </a>
          </button>
        </ul>
      </div>
    </div>
  </nav>
  <h1 class="title mt-3">Agregar productos</h1>
  <form action="" class="form-container" id="add-product-form">
    <div class="mb-3">
      <label for="title" class="form-label">Nombre del producto:</label>
      <input
        type="text"
        class="form-control"
        id="title"
        placeholder="Ingrese el nombre del producto..."
      />
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">Descripción:</label>
      <textarea
        class="form-control"
        placeholder="Descripción del producto..."
        id="description"
        style="height: 80px"
      ></textarea>
    </div>
    <div class="mb-3">
      <label for="code" class="form-label">Código de producto:</label>
      <input
        type="text"
        class="form-control"
        id="code"
        placeholder="Ingrese el código único del producto..."
      />
    </div>
    <div class="mb-3">
      <label for="price" class="form-label">Precio:</label>
      <input
        type="number"
        class="form-control"
        id="price"
        placeholder="Ingrese el precio del producto..."
      />
    </div>
    <div class="mb-3">
      <label for="stock" class="form-label">Stock:</label>
      <input
        type="number"
        class="form-control"
        id="stock"
        placeholder="Ingrese el stock del producto..."
      />
    </div>
    <div class="mb-3">
      <label for="category" class="form-label">Categoría:</label>
      <input
        type="text"
        class="form-control"
        id="category"
        placeholder="Ingrese la categoria del producto..."
      />
    </div>
    <div class="mb-3">
      <label for="thumbnail" class="form-label">Imagen:</label>
      <input
        type="text"
        class="form-control"
        id="thumbnail"
        placeholder="Ingrese la ruta de la imagen..."
      />
    </div>
    <button type="submit" class="btn btn-primary" id="submit">Crear producto</button>
  </form>
  <div class="list-group list" id="products-list"></div>
  <nav class="mt-3 mb-3">
    <ul class="pagination justify-content-center">
      <li class="page-item">
        <button
          class="page-link"
          onclick="previousPage()"
          type="button"
          id="previous-page"
        >Anterior</button>
      </li>
      <li
        class="page-item"
        id="item-page"
        data-page="1"
        onclick="pagination(1)"
      ><button class="page-link">1</button></li>
      <li
        class="page-item"
        id="item-page"
        data-page="2"
        onclick="pagination(2)"
      ><button class="page-link">2</button></li>
      <li
        class="page-item"
        id="item-page"
        data-page="3"
        onclick="pagination(3)"
      ><button class="page-link">3</button></li>
      <li
        class="page-item"
        id="item-page"
        data-page="4"
        onclick="pagination(4)"
      ><button class="page-link">4</button></li>
      <li class="page-item">
        <button
          class="page-link"
          onclick="nextPage()"
          type="button"
          id="next-page"
        >Siguiente</button>
      </li>
    </ul>
  </nav>
</main>
<!-- Socket -->
<script src="/socket.io/socket.io.js"></script>
